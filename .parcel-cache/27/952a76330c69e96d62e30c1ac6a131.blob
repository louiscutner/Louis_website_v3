require("@fortawesome/fontawesome-free/js/solid");
require("@fortawesome/fontawesome-free/js/fontawesome");
require("@fortawesome/fontawesome-free/js/brands");
require("./index.css");
const tontu_r = document.getElementById("tontu-arrow-right");
const tontu_r_faded = document.getElementById("tontu-arrow-right-faded");
const tontu_l = document.getElementById("tontu-arrow-left");
const tontu_l_faded = document.getElementById("tontu-arrow-right-faded");
const phone_list = document.getElementsByClassName("phone-screen");
const skydda_r = document.getElementById("skydda-arrow-right");
const skydda_r_faded = document.getElementById("skydda-arrow-right-faded");
const skydda_l = document.getElementById("skydda-arrow-left");
const skydda_l_faded = document.getElementById("skydda-arrow-left-faded");
const skydda_list = document.getElementsByClassName("skydda-list");
const buttons = [{
  name: tontu_r,
  direction: "right",
  faded: false,
  sibling: tontu_r_faded,
  list: phone_list
}, {
  name: tontu_l,
  direction: "left",
  faded: false,
  sibling: tontu_l_faded,
  list: phone_list
}, {
  name: skydda_r,
  direction: "right",
  faded: false,
  sibling: skydda_r_faded,
  list: skydda_list
}, {
  name: skydda_l,
  direction: "right",
  faded: false,
  sibling: skydda_l_faded,
  list: skydda_list
}, {
  name: tontu_r_faded,
  direction: "right",
  faded: true,
  sibling: tontu_r,
  list: phone_list
}, {
  name: tontu_l_faded,
  direction: "left",
  faded: true,
  sibling: tontu_l,
  list: phone_list
}, {
  name: skydda_r_faded,
  direction: "right",
  faded: true,
  sibling: skydda_r,
  list: skydda_list
}, {
  name: skydda_l_faded,
  direction: "right",
  faded: true,
  sibling: skydda_l,
  list: skydda_list
}];
const rightClick = function (list) {
  for (let x = 0; x < list.length; x++) {
    if (list[x].classList.contains("hidden")) {} else {
      if (x !== list.length - 1) {
        list[x].classList.add("hidden");
        list[x + 1].classList.remove("hidden");
      }
      break;
    }
  }
};
const leftClick = function (list) {
  for (let x = 0; x < list.length; x++) {
    if (list[x].classList.contains("hidden")) {} else {
      if (x !== 0) {
        list[x].classList.add("hidden");
        list[x - 1].classList.remove("hidden");
      }
      break;
    }
  }
};
for (let x = 0; x < buttons.length; x++) {
  if (buttons[x].name !== null) {
    buttons[x].name.addEventListener("click", e => {});
    if (buttons[x].direction === "right") {
      rightClick(buttons[x].name, buttons[x].sibling);
    } else {
      leftClick(buttons[x].name, buttons[x].sibling);
    }
  }
}
if (tontu_r !== null) {
  tontu_r.addEventListener("click", e => {
    rightClick(phone_list);
  });
}
if (tontu_l !== null) {
  tontu_l.addEventListener("click", e => {
    leftClick(phone_list);
  });
}
if (skydda_r !== null) {
  skydda_r.addEventListener("click", e => {
    rightClick(skydda_list);
  });
}
if (skydda_l !== null || skydda_l_faded !== null) {
  skydda_l.addEventListener("click", e => {
    leftClick(skydda_list);
  });
}
